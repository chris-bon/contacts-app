<h1>Add a New Contact!</h1>

<%= form_tag '/products', method: :post do %>
  <div><%= label_tag :name %><%= text_field_tag :name %></div>
  <div><%= label_tag :address %><%= text_field_tag :address %></div>
  <div><%= label_tag :phone_number %><%= text_field_tag :phone_number %></div>
  <%= submit_tag 'Add New Contact' %>
<% end %>
<hr />
<%= link_to 'Home', '/' %>